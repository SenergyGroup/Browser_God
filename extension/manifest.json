{
  "manifest_version": 3,
  "name": "Data Gatherer",
  "description": "Agent-controlled browser tool for structured data capture.",
  "version": "0.1.0",
  "permissions": [
    "storage",
    "tabs",
    "debugger",
    "downloads"
  ],
  "host_permissions": [
    "https://*.etsy.com/*"
  ],
  "background": {
    "service_worker": "background/service_worker.js",
    "type": "module"
  },
  "action": {
    "default_title": "Data Gatherer",
    "default_popup": "popup/popup.html"
  },
  "options_page": "options/options.html",
  "content_scripts": [
    {
      "matches": [
        "https://*.etsy.com/*"
      ],
      "js": ["content/actions.js"],
      "run_at": "document_idle"
    }
  ]
}
